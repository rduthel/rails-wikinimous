<h1>Articles</h1>

<ol>
  <% @articles.each do |article| %>
    <li>
      Title: <%= link_to article.title, article_path(article) %>
      <%= button_to "Delete", article_path(article), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
    <p>Details: <%= article.content %></p>
  <% end %>
</ol>

<p><%= link_to "Add a new article", new_article_path %></p>
